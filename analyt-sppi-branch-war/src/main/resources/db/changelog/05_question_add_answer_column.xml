<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog /xsd/dbchangelog-3.6.xsd">
    <changeSet id="005" author="afedorenko">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="sppi_questions"/>
                <not>
                    <columnExists columnName="answers" tableName="sppi_questions"/>
                </not>
            </and>
        </preConditions>
        <addColumn tableName="sppi_questions">
            <column name="answers" type="varchar(500)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog /xsd/dbchangelog-3.6.xsd">

    <changeSet id="001" author="alander">
        <createTable tableName="sppi_processes" remarks="Запущенные процессы">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="description" remarks="Комментарий" type="varchar(255)"/>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="process_pk" tableName="sppi_processes"/>
        <createSequence sequenceName="process_sequence" startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog /xsd/dbchangelog-3.6.xsd">

    <changeSet id="002" author="alander">
        <createTable tableName="sppi_questions" remarks="Справочник вопросов">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="code" remarks="Код вопроса" type="varchar(25)"/>
            <column name="content" remarks="Текст вопроса" type="varchar(1500)"/>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="question_pk" tableName="sppi_questions"/>
        <createSequence sequenceName="question_sequence" startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>